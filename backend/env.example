# Portfolio Playground Environment Configuration

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=closing_price_service

# Redis Configuration  
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Finnhub API Configuration (required for NYSE stocks via API)
# Get your free API key from https://finnhub.io/
# Used by the populate_symbols script to fetch live NYSE securities data
FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_BASE_URL=https://finnhub.io/api/v1

# Cache Configuration
CACHE_TTL_SECONDS=86400
TRACKING_EXPIRY_DAYS=7

# Logging
LOG_LEVEL=INFO 