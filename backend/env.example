# Portfolio Playground Environment Configuration

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=closing_price_service

# Redis Configuration  
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Finnhub API Configuration (required for US stocks)
# Get your free API key from https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_BASE_URL=https://finnhub.io/api/v1

# Cache Configuration
CACHE_TTL_SECONDS=86400
TRACKING_EXPIRY_DAYS=7

# Logging
LOG_LEVEL=INFO

# Google AI Configuration (required for AI analyst features)
# Get your API key from https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-1.5-flash
AI_ANALYSIS_RATE_LIMIT=10
AI_CHAT_RATE_LIMIT=30 