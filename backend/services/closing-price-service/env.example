# Closing Price Service Configuration

# API Configuration
APP_NAME=Closing Price Service
APP_VERSION=1.0.0
DEBUG=false

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=closing_price_service

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Finnhub API Configuration (required for US stocks)
# Get your free API key from https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_BASE_URL=https://finnhub.io/api/v1

# Cache Configuration
CACHE_TTL_SECONDS=86400
TRACKING_EXPIRY_DAYS=7

# Background Job Configuration
REFRESH_JOB_HOUR=9
REFRESH_JOB_MINUTE=0

# Logging
LOG_LEVEL=INFO 